{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"isolatedModules": true,

		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,

		"rootDir": "src/",
		"sourceMap": true,

		"skipLibCheck": true,
		"noEmitOnError": true
	},
	"exclude": ["node_modules"]
}
